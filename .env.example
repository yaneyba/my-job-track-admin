# Environment Configuration for My Job Track Admin

# API Configuration - Cloudflare Worker
VITE_API_BASE_URL=http://localhost:8787
VITE_API_TIMEOUT=30000

# For production, use your Cloudflare Worker URL:
# VITE_API_BASE_URL=https://your-worker.your-subdomain.workers.dev

# Application Configuration
VITE_APP_NAME="My Job Track Admin"
VITE_APP_VERSION="1.0.0"

# Development Configuration
VITE_DEV_TOOLS=true
VITE_DEBUG_MODE=true

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_EXPORT=true

# Security
VITE_ENABLE_CSP=true

# UI Configuration
VITE_DEFAULT_PAGE_SIZE=25
VITE_MAX_PAGE_SIZE=100

# Cloudflare Configuration (for deployment)
# CLOUDFLARE_ACCOUNT_ID=your_account_id
# CLOUDFLARE_API_TOKEN=your_api_token
